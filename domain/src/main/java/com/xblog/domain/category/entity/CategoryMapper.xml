<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xblog.domain.category.dao.CategoryMapper">

    <resultMap type="com.xblog.domain.category.entity.Category" id="categoryResultMap">
        <id property="id" column="id" jdbcType="INTEGER" />
        <result property="categoryNo" column="category_no" jdbcType="VARCHAR" />
        <result property="categoryName" column="category_name" jdbcType="VARCHAR" />
        <result property="createTime" column="create_time" jdbcType="VARCHAR" />
        <result property="modifyTime" column="modify_time" jdbcType="VARCHAR" />
        <result property="status" column="status" jdbcType="INTEGER" />
    </resultMap>

    <insert id="insert" parameterType="com.xblog.domain.category.entity.Category" statementType="PREPARED">
        <![CDATA[
            INSERT INTO category (category_no, category_name, create_time, modify_time, status)
            VALUES (#{categoryNo},#{categoryName},#{createTime},#{modifyTime},#{status})
        ]]>
    </insert>

    <!-- 查询分类，根据id -->
    <select id="getCategoryByID" parameterType="java.lang.Integer" resultMap="categoryResultMap">
        <![CDATA[
            SELECT * from category WHERE id = #{id}
        ]]>
    </select>

    <!-- 查询分类，根据id -->
    <select id="getCategoryByNo" parameterType="java.lang.String" resultMap="categoryResultMap">
        <![CDATA[
            SELECT * from category WHERE article_no = #{categoryNo}
        ]]>
    </select>

    <update id="update" parameterType="com.xblog.domain.category.entity.Category" statementType="PREPARED">
        <![CDATA[
        update category set modify_time = #{modifyTime}
        ]]>
        <if test = "null != categoryName and '' != categoryName">
            , category_name = #{categoryName}
        </if>
        <if test = "null != status and '' != status">
            , status = #{status}
        </if>
        <![CDATA[
        where category_no = #{categoryNo}
        ]]>
    </update>

    <select id="list" parameterType="java.util.HashMap" resultMap="categoryResultMap" statementType="PREPARED">
        <![CDATA[
            SELECT * from category
        ]]>
    </select>

</mapper>